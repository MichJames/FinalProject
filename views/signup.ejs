<!DOCTYPE html>
<head>
    <% include partials/head %>
    <title>Sign Up</title>
</head>
<body class="container">
  <h2 class="row">Sign up to enjoy the expirience</h2>
  <hr/>
  <form id="form" class="row justify-content-center" action="/signup" method="post">
    <div class="card">
      <div class="card-body">
    <div class="form-group">
      <label for="form_username">Username</label>
      <input id="form_username" type="text" name="username" />
    </div>
    <div class="form-group">
      <label for="form_email">Email</label>
      <input id="form_email" type="email" name="email" />
    </div>
    <div class="form-group">
      <label for="form_password">Password</label>
      <input id="form_password" type="password" name="password" />
    </div>
    <div class="form-group">
      <label for="form_password">Confirm Password</label>
      <input id="form_password_confirm" type="password" name="password2" />
    </div>
    <button class="btn btn-primary btn-block" type="submit" value="Submit">Subscribe</button>
  </div>
  </div>
  </form>
  <hr/>
  <p>Already got an account?</p>
  <button class="btn btn-success btn-block" type="submit" href="/login" onClick='document.location.href="/login"'>
    Login
  </button>
</body>
